{
  "name": "game-algorithm-comparison",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "https://github.com/hal-shu-sato/game-algorithm-comparison.git",
  "author": "ato lash <28973861+hal-shu-sato@users.noreply.github.com>",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.7.4",
    "prettier-plugin-packagejson": "^2.5.20",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec \"ts-node\" src/index.ts",
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "dev": "npm-run-all2 -p watch start",
    "prepare": "husky",
    "lint": "npm-run-all2 lint:*",
    "lint:eslint": "eslint",
    "lint:prettier": "prettier --check .",
    "fix": "npm-run-all2 fix:*",
    "fix:eslint": "eslint --fix",
    "fix:prettier": "prettier --write ."
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*": "prettier --write --ignore-unknown"
  }
}
